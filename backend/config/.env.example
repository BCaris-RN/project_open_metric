# Get this from Google Cloud Console -> IAM -> Service Accounts -> Keys
GOOGLE_APPLICATION_CREDENTIALS=../keys/service_account.json

# Create a folder in Drive, open it, copy the ID from the URL (after /folders/...)
GOOGLE_DRIVE_FOLDER_ID=YOUR_FOLDER_ID_HERE

# Optional: create or update a dedicated NotebookLM source file in Drive
NOTEBOOKLM_SOURCE_FILE_ID=
NOTEBOOKLM_SOURCE_NAME=NotebookLM_Source.csv
NOTEBOOKLM_FOLDER_ID=

# Metricool credentials (used if no cookies are provided)
METRICOOL_EMAIL=your_email@example.com
METRICOOL_PASSWORD=your_password

# Optional: reuse a logged-in browser session
METRICOOL_COOKIES_PATH=../keys/metricool_cookies.json

# Optional: direct Analytics URL (if navigation is flaky)
# METRICOOL_ANALYTICS_URL=https://app.metricool.com/...

# Buffer credentials (used if no cookies are provided)
BUFFER_EMAIL=your_email@example.com
BUFFER_PASSWORD=your_password

# Optional: reuse a logged-in browser session
BUFFER_COOKIES_PATH=../keys/buffer_cookies.json

# Optional: override defaults
BUFFER_MAX_QUEUE=10
BUFFER_HEADLESS=true

# Optional: API key required for all backend requests if set
OPEN_METRIC_API_KEY=

# Optional: SQLite DB location
SQLITE_DB_PATH=data_cache/open_metric.db

# Optional: Ollama configuration
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=llama3
OLLAMA_STATUS_URL=http://localhost:11434/api/tags
